<h1>Users</h1>

<table class="condensed-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th>Start</th>
      <th>End</th>
      <th>Owns</th>
      <th>Watches</th>
    </tr>
    <tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
          <td> <%= link_to u.name, u %> </td>
          <td> <%= u.password %> </td>
          <td> <%= u.watch_times.first.start %> </td>
          <td> <%= u.watch_times.first.end %> </td>
          <td> <%= u.owns %> </td>
          <td> <%= u.watches %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> <%= link_to "Add a New User", new_user_path %> </p>
