<h1>Add User</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :password %> <br />
    <%= f.text_field :password %>
  </p>

  <%= fields_for @watchtime do |f| %>
    <p>
      <%= f.label :start %> <br />
      <%= f.text_field :start %>
    </p>
    
    <p>
      <%= f.label :end %> <br />
      <%= f.text_field :end %>
    </p>
  <% end %>

  <p>
    <%= f.submit "Add User" %>
  </p>
<% end %>
